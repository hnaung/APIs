  },
  "husky": {
    "hooks": {
      "pre-push": "npm run prettier-check && npm run lint-check && npm test"
    }
  },
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "@sendgrid/mail": "^6.4.0",
    "bcrypt": "3.0.6",
    "date-fns": "^1.30.1",
    "dotenv": "^7.0.0",
    "google-auth-library": "^3.1.2",
