    "mysql2": "^1.6.5",
    "uuid": "^3.3.2",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.1.7",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-bunyan-logger": "^2.1.1",
    "@types/koa-router": "^7.0.40",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/mocha": "^5.2.7",
    "@types/mysql": "^2.15.6",
    "@types/node": "^12.0.8",
    "@types/nodemailer": "^6.2.0",
    "@types/sinon": "^7.0.13",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "@types/validator": "^10.11.1",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.15.3",
    "eslint-config-koa": "^2.0.2",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.3.0",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "sinon": "^7.3.1",
    "source-map-support": "^0.5.12",
    "supertest": "^4.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  },
  "scripts": {
    "test-integration": "NODE_ENV=test nyc --report=lcov mocha --require ts-node/register test/integration/index.ts",
    "test-unit": "NODE_ENV=test nyc --report=lcov mocha --require ts-node/register test/unit/index.ts",
    "test": "concurrently \"npm run test-unit\" \"npm run test-integration\"",
    "test-watch": "nyc --report=lcov npm run test -- --watch",
    "lint-fix": "eslint --fix --ext .js,.ts src/ && eslint --fix --ext .ts test/",
    "lint-src": "eslint --ext .js,.ts src/",
    "lint-test": "eslint --ext .ts test/",
    "lint-check": "concurrently \"npm run lint-src\" \"npm run lint-test\"",
    "prettier-fix": "prettier --write src/**/*",
    "prettier-check": "prettier --check src/**/*",
    "watch": "tsc -w -p .",
    "debug": "nodemon --legacy-watch --watch ./dist ./dist/index.js | bunyan -o short",
    "dev": "concurrently \"npm run debug\" \"npm run watch\"",
    "start": "node dist/bin/www | bunyan -o short",
    "docker-build": "docker image build -t identity-service:dev -f Dockerfile-dev .",
    "docker-build-prod": "docker image build -t identity-service:prod .",
    "docker-run": "docker run -p 3001:8080 -d --name identity-service-dev identity-service:dev",
    "docker-run-prod": "docker run -p 3000:8080 -d --name identity-service-prod identity-service:prod",
    "compose-prod-up": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "compose-prod-down": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml down"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/gourmet-plus/identity-service.git"
  },
  "author": "",
  "license": "ISC",
